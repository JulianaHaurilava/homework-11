<Window x:Class="task_11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="990">
    <Grid>
        <ListView 
            x:Name="lClientInfo"
              HorizontalAlignment="Left"
              Height="400"
              Margin="329,10,0,0"
              VerticalAlignment="Top"
              SelectionMode="Single"
              Width="644"
              SelectionChanged="lClientInfo_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Number}" Width="20" Header="№"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Surname}" Width="120" Header="Фамилия"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="80" Header="Имя"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Patronymic}" Width="120" Header="Отчество"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding PhoneNumber}" Width="150" Header="Номер телефона"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding PassportSeries}" Width="50" Header="Серия"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding PassportNumber}" Width="100" Header="Номер паспорта"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel
            x:Name="spClientInfo"
            HorizontalAlignment="Left"
            Margin="10,62,0,0"
            VerticalAlignment="Top"
            Width="310"
            Visibility="Hidden"
            Height="195">

            <Grid>
                <TextBlock Text="Фамилия: "></TextBlock>
                <TextBox 
                    TextWrapping="Wrap"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text=""
                    Width="200"
                    HorizontalAlignment="Right"/>
            </Grid>
            <Grid
                Margin="0,5,0,0">
                <TextBlock Text="Имя: "></TextBlock>
                <TextBox 
                    TextWrapping="Wrap"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text=""
                    Width="200"
                    HorizontalAlignment="Right"/>
            </Grid>
            <Grid
                Margin="0,5,0,0">
                <TextBlock Text="Отчество: "></TextBlock>
                <TextBox 
                    TextWrapping="Wrap"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text=""
                    Width="200"
                    HorizontalAlignment="Right"/>
            </Grid>
            <Grid
                Margin="0,5,0,0">
                <TextBlock Text="Номер телефона: "></TextBlock>
                <TextBox 
                    TextWrapping="Wrap"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text=""
                    Width="200"
                    HorizontalAlignment="Right"/>
            </Grid>
            <Grid
                Margin="0,5,0,0">
                <TextBlock Text="Серия: "></TextBlock>
                <TextBox 
                    TextWrapping="Wrap"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text=""
                    Width="200"
                    HorizontalAlignment="Right"/>
            </Grid>
            <Grid
                Margin="0,5,0,0">
                <TextBlock Text="Номер паспорта: "></TextBlock>
                <TextBox 
                    TextWrapping="Wrap"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Text=""
                    Width="200"
                    HorizontalAlignment="Right"/>
            </Grid>

            <Button 
                Margin="0,30"
                Content="Подтвердить изменения"/>
        </StackPanel>
        <ComboBox
            x:Name="cbWorkerType"
            SelectionChanged="cbWorkerType_SelectionChanged"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            VerticalAlignment="Top"
            Width="310"/>
        <StackPanel x:Name="spConsultantMenu"
                   HorizontalAlignment="Left"
                   Height="365" Margin="10,45,0,0"
                   VerticalAlignment="Top"
                   Width="310"
                   Visibility="Hidden">
            <TextBlock
            HorizontalAlignment="Center"
            Margin="0,50,0,0"
            TextWrapping="Wrap"
            Text="Меню"
            VerticalAlignment="Top"
            FontSize="16"/>
            <Button
                x:Name="bEditClientC"
            Content="Редактировать информацию"
            HorizontalAlignment="Center"
            Margin="0,30,0,0"
            VerticalAlignment="Top"
            Width="170"
            Height="35"
            Click="bEditClientC_Click"/>
            <Button
                x:Name="bSortClientsC"
            Content="Сортировка по алфавиту"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            VerticalAlignment="Top"
            Width="170"
            Height="35"
                Click="bSortClientsC_Click"/>
        </StackPanel>
        <StackPanel x:Name="spManagerMenu"
                   HorizontalAlignment="Left"
                   Height="365" Margin="10,45,0,0"
                   VerticalAlignment="Top"
                   Width="310"
                   Visibility="Hidden">
            <TextBlock
            HorizontalAlignment="Center"
            Margin="0,50,0,0"
            TextWrapping="Wrap"
            Text="Меню"
            VerticalAlignment="Top"
            FontSize="16"/>
            <Button
                x:Name="bEditClientM"
            Content="Редактировать информацию"
            HorizontalAlignment="Center"
            Margin="0,30,0,0"
            VerticalAlignment="Top"
            Width="170"
            Height="35"
                Click="bEditClientM_Click"/>
            <Button
                x:Name="bAddNewClient"
            Content="Добавить нового клиента"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            VerticalAlignment="Top"
            Width="170"
            Height="35"
                Click="bAddNewClient_Click"/>
            <Button
                x:Name="bDeleteClient"
            Content="Удалить запись"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            VerticalAlignment="Top"
            Width="170"
            Height="35"
                Click="bDeleteClient_Click"/>
            <Button
                x:Name="bSortClientsM"
            Content="Сортировка по алфавиту"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            VerticalAlignment="Top"
            Width="170"
            Height="35"
                Click="bSortClientsC_Click"/>
        </StackPanel>
        <Border
            BorderBrush="Gray"
            BorderThickness="1"
            HorizontalAlignment="Left"
            Height="365"
            Margin="10,45,0,0"
            VerticalAlignment="Top"
            Width="310"/>

    </Grid>
</Window>
